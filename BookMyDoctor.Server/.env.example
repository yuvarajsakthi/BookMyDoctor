# Database
CONNECTION_STRING=Server=localhost;Database=BookMyDoctorDB;Trusted_Connection=true;TrustServerCertificate=true;

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters
